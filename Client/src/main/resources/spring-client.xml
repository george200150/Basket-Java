<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="chatService" class="org.springframework.remoting.rmi.RmiProxyFactoryBean">
        <property name="serviceUrl" value="rmi://192.168.1.5:1099/Chat"/> <!--Specificam ca protocolul este RMI, adresa la care se afla serverul, portul (acelasi cu al serverului) si numele serviciului (serviceName)-->
        <property name="serviceInterface" value="services.IServices"/> <!--Numele interfetei pe care o implementeaza serviciul respectiv-->
    </bean>

</beans>