<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="dialect">org.hibernate.dialect.PostgreSQL9Dialect</property>
        <property name="connection.driver_class">org.postgresql.Driver</property>
        <property name="connection.url">jdbc:postgresql://localhost:5432/MPP</property> <!--This can be missing? idk, I think not...-->
        <!--LONG LIVE STACK OVERFLOW !!! this is how to connect to Postgres DB-->
        <property name="connection.username">postgres</property> <!-- DB User -->
        <property name="connection.password">admin</property> <!-- DB Password -->

        <property name="hibernate.hbm2ddl.auto">update</property>

        <!--Echo all executed SQL to stdout-->
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>

        <!--<mapping resource="Bilet.hbm.xml"/>
        <mapping class="model.domain.Bilet"/>-->
        <mapping resource="Bilet.hbm.xml"/>
        <mapping class="model.domain.BiletAnnot"/>

    </session-factory>
</hibernate-configuration>